<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.palmdigital.textviewoutput01.MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstOutput"
        android:textSize="40sp"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60px"
            app:srcCompat="@drawable/number_one"
            android:id="@+id/number_one"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60px"
            app:srcCompat="@drawable/number_two"
            android:id="@+id/number_two"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60px"
            app:srcCompat="@drawable/number_three"
            android:id="@+id/number_three"
            android:layout_weight="1" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60px"
        app:srcCompat="@drawable/add"
        android:id="@+id/add" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/secondOutput"
        android:textSize="40sp"
        android:textAlignment="center"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="77dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60px"
            app:srcCompat="@drawable/number_four"
            android:id="@+id/number_four"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60px"
            app:srcCompat="@drawable/number_five"
            android:id="@+id/number_five"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60px"
            app:srcCompat="@drawable/number_six"
            android:id="@+id/number_six"
            android:layout_weight="1" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60px"
        app:srcCompat="@drawable/equals"
        android:id="@+id/equals" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lastOutput"
        android:textSize="40sp"
        android:textAlignment="center"/>

</LinearLayout>
